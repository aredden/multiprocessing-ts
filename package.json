{
	"name": "multiprocess-ts",
	"version": "1.3.0",
	"description": "Dead simple parallel processing for node",
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"scripts": {
		"preversion": "yarn test",
		"pre_test": "tsc",
		"test": "mocha test/**/*.spec.js --exit",
		"lint": "eslint src",
		"pretty": "prettier src/**/*.ts --write && prettier test/**/*.js --write && prettier lib/**/*.js --write",
		"pretty:test": "prettier src/**/*.ts -c && prettier test/**/*.js -c && prettier lib/**/*.js -c",
		"clean:pwsh": "pwsh -Command \"rm lib/*.map && rm lib/*.js && rm lib/*.d.ts\"",
		"prepare": "husky install",
		"precommit": "yarn test && yarn pretty:test && yarn lint",
		"commitprep": "yarn clean:pwsh && tsc && yarn pretty && yarn lint"
	},
	"babel": {
		"presets": [
			"@babel/preset-typescript"
		]
	},
	"keywords": [
		"multiprocessing",
		"parallel",
		"multicore",
		"map",
		"pool"
	],
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": true,
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"printWidth": 110,
		"useTabs": true,
		"quoteProps": "consistent",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "es5",
		"jsxSingleQuote": false,
		"proseWrap": "always"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"bluebird": "^3.7.2",
		"escope": "^3.6.0"
	},
	"devDependencies": {
		"husky": "^7.0.4",
		"@babel/cli": "^7.16.0",
		"@babel/core": "^7.16.5",
		"@babel/preset-typescript": "^7.16.5",
		"@types/bluebird": "^3.5.36",
		"@types/chai": "^4.3.0",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"babel-eslint": "^7.1.1",
		"babel-preset-latest": "^6.22.0",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"eslint": "^8.5.0",
		"eslint-plugin-babel": "^5.3.1",
		"lodash": "^4.17.21",
		"mocha": "^9.1.3",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4"
	}
}
